<Window x:Class="PharmacyApp.View.ComponentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmacyApp.View"
        mc:Ignorable="d"
        Title="Управление компонентами" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Форма редактирования -->
        <GroupBox Grid.Row="0" Header="Данные компонента" Margin="0 0 0 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Margin="5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Единица измерения:" Margin="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding UnitOfMeasure}" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Критическая норма:" Margin="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CriticalNorm}" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="Срок годности (дни):" Margin="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding ShelfLife}" Margin="5"/>
            </Grid>
        </GroupBox>

       
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 10">
            <Button Content="Добавить" Command="{Binding AddCommand}" Width="100" Margin="5"/>
            <Button Content="Изменить" Command="{Binding SaveCommand}" Width="100" Margin="5"/>
            <Button Content="Удалить" Command="{Binding DeleteCommand}" Width="100" Margin="5"/>
        </StackPanel>

  
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Components}" 
                  SelectedItem="{Binding SelectedComponent}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ComponentId}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Единица измерения" Binding="{Binding UnitOfMeasure}" Width="120"/>
                <DataGridTextColumn Header="Критическая норма" Binding="{Binding CriticalNorm}" Width="100"/>
                <DataGridTextColumn Header="Срок годности" Binding="{Binding ShelfLife}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>